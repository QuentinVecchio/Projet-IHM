<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item android:top="-20dp" android:right="-20dp" android:bottom="-20dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="#d92727" />
        </shape>
    </item>

</layer-list>